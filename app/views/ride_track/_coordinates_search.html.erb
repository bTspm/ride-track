<%= form_tag(ride_track_price_estimate_path, method: :get, remote: true) do %>

  <div class="form-group">
    <label><%= I18n.t('ride_track.labels.origin') %></label>
    <input type="text" class="form-control" id="origin_address" placeholder="Central Park, Manhattan, New York, NY, USA"/>
  </div>

  <div class="form-group">
    <label><%= I18n.t('ride_track.labels.destination') %></label>
    <input type="text" class="form-control" id="destination_address" placeholder="Times Square, Manhattan, New York, NY, USA"/>
  </div>

  <input type="button" value="<%= I18n.t('ride_track.buttons.estimate') %>" class="btn btn-primary" id="estimate">
<% end %>

<%= render partial: 'coordinate_details' %>

<script>
    $(document).ready(function () {
        coordinatesSearch.initCordSearch();
    });
</script>