.jumbotron.search-section.text-center
  %h3 Currencies List
.container.py-5
  %table.table.table-bordered
    %thead
      %tr
        %th Name
        %th Code
        %th Icon
        %th Symbol
        %th Convert
    %tbody
      - @currencies.in_groups(2).each do |currencies_chuck|
        - currencies_chuck.each do |currency|
          %tr
            %td= currency.name
            %td= currency.code
            %td
              %span{class: "currency-flag currency-flag-#{currency.code.try(:downcase)}"}
            %td= currency.symbol
            %td
              -Constants::Currency::POPULAR_CURRENCIES.each do |c|
                %span
                  - next if c.downcase == currency.code.try(:downcase)
                  = link_to currencies_convert_path(from: currency.code, to: c) do
                    %i{class: "currency-flag currency-flag-#{c}"}

